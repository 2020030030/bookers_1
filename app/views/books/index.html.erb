<html>

  <body>
    <h1>Books</h1>

  <table>
<thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
   </tr>
</thead>

<tobody>
    <% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show' , book_path(book.id) %></td>
    <td><%= link_to 'Edit' , edit_book_path(book.id) %></td>
    <td><%= link_to 'Destroy',book_path(book.id), method: :delete%></td>
    </tr>
    <% end %>
</tobody>
    </table>




   <h2>New book</h2>

<% if @book.errors.any? %>
   <%= pluralize(@book.errors.count, "error") %>
   <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

   <%= form_with model:@book, url:'/books', local:true do |f| %>

  <div class="field">
 <label for="book_title">Title</label></br>
  <%= f.text_field :title%>
 </div>

 <div class="field">
 <label for="book_body">Body</label></br>
   <%= f.text_area :body %>
 </div>

 <div class="actions">
   <%= f.submit 'Create Book' %>
 </div>
<% end %>

</body>
</html>